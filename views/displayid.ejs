    <input type="date" value="<%=data.date%>" name="date" class="form-control" placeholder="Date" id="date">
  </div>
  <div class="col-md-6">
    <label for="time" class="form-label">Time</label>
    <input type="time" value="<%=data.time%>" name="time" class="form-control" placeholder="Time" id="time">
  </div>
  <div class="col-md-6 drop">
