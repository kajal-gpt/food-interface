    <input type="hidden" value="<%=data.foodid %>" name="foodid"/>
<div class="col-md-6">
    <label for="foodtypeid" class="form-label">Food Type</label>
    <select  class="form-select" id="foodS" name="foodtypeid">
        <option value="<%=data.foodtypeid %>"><%=data.foodtype %></option>
      </select>
  </div>
  <div class="col-md-6">
    <label for="hotelsid" class="form-label">Hotel</label>
    <select class="form-select" id="hotel" name="hotelsid">
        <option value="<%=data.hotelsid %>"><%=data.hotels %></option>
      </select> 
     </div>
  <div class="col-md-6">
    <label for="dishid" class="form-label">Dishes</label>
